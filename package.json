{
  "name": "monorepo-playground",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "clean": "npm run --if-present clean --workspaces",
    "build": "npm run --if-present build --workspaces",
    "serve": "npm run start --workspace @my-repo/server"
  },
  "devDependencies": {
    "typescript": "~4.9.0"
  }
}