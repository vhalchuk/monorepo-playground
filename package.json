{
  "name": "monorepo-playground",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"WEBPACK,SERVER\" --prefix \"[{name}]\" --prefix-colors \"blue,magenta\" \"npm run dev --workspace @my-repo/client\" \"npm run dev --workspace @my-repo/server\"",
    "clean": "npm run --if-present clean --workspaces",
    "build": "npm run --if-present build --workspaces",
    "serve": "npm run start --workspace @my-repo/server"
  },
  "devDependencies": {
    "typescript": "~4.9.0",
    "concurrently": "^9.1.1"
  }
}