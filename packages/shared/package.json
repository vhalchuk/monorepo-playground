{
  "name": "@my-repo/shared",
  "version": "1.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build:types": "tsc --project tsconfig.build.types.json",
    "build:esm": "babel src --extensions '.ts' --config-file ./babel.config.esm.json --out-dir dist/esm",
    "build:cjs": "babel src --extensions '.ts' --config-file ./babel.config.cjs.json --out-dir dist/cjs",
    "build": "npm run clean && npm run build:types && npm run build:cjs"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "rimraf": "~6.0.0",
    "typescript": "~4.9.0",
    "tsc-alias": "^1.8.11",
    "babel-core": "^6.26.3",
    "@babel/cli": "^7.26.4",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "babel-plugin-module-resolver": "^5.0.2"
  }
}