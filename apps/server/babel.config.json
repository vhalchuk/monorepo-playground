{
    "sourceMaps": true,
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": { "node": "current" },
                "modules": "commonjs"
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./src"],
                "alias": {
                    "@": "./src"
                }
            }
        ]
    ]
}
